{
  "name": "jeremenichelli.io",
  "version": "3.0.0",
  "description": "Personal site by Jeremias Menichelli",
  "main": "index.md",
  "scripts": {
    "clean": "rimraf _site assets _includes/styles _includes/scripts _includes/favicons.liquid",
    "format:js": "prettier --write './**/*.js'",
    "format:less": "prettier --write './**/*.less'",
    "format:md": "prettier --write './**/*.md'",
    "bundle": "node .scripts/bundle.js",
    "favicons": "node .scripts/favicons.js",
    "images": "node .scripts/images.js",
    "fonts": "mkdir -p assets/fonts && cp -a src/fonts/. assets/fonts/",
    "less": "node .scripts/less.js",
    "serve": "eleventy --serve",
    "build": "DEBUG=* eleventy",
    "assets": "yarn bundle && yarn less && yarn favicons && yarn images && yarn fonts",
    "validate:feed": "npx feed-validator _site/feed.xml --no-showfeed",
    "prerelease": "yarn clean",
    "release": "yarn assets && yarn build && yarn validate:feed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "github.com/jeremenichelli/personal-site"
  },
  "keywords": [
    "blog",
    "personal site",
    "jeremias menichelli"
  ],
  "author": "Jeremias Menichelli",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "autoprefixer": "^9.6.1",
    "chalk": "^2.4.2",
    "cssnano": "^4.1.10",
    "eleventy-nbsp-filter": "^0.1.0",
    "eleventy-xml-plugin": "^0.1.0",
    "favicons": "^5.4.1",
    "glob": "^7.1.4",
    "html-minifier": "^4.0.0",
    "husky": "^3.0.0",
    "jimp": "^0.6.4",
    "less": "^3.9.0",
    "lint-staged": "^9.2.0",
    "mkdirp": "^0.5.1",
    "postcss": "^7.0.17",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "dependencies": {
    "fontfaceobserver": "^2.1.0",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.4",
    "store-css": "^1.0.2"
  },
  "lint-staged": {
    "./**/*.js": [
      "prettier --write",
      "git add"
    ],
    "./**/*.less": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
