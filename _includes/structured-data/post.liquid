{
  "@context": "https://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{site.url}}{{page.url}}"
  },
  "headline": "{{ pageTitle }}",
  "description": "{{ pageDescription }}",
  "image": "{{ site.authorImage }}",
  "author": {
    "@type": "Person",
    "name": "{{ site.author }}"
  },  
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.title }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.authorImage }}",
      "width": 300,
      "height": 300
    }
  },
  "datePublished": "{{ page.date | date: '%Y-%m-%d' | append: 'T00:00:00.000Z' }}",
  "dateModified": "{{ page.date | date: '%Y-%m-%d' | append: 'T00:00:00.000Z' }}"
}
