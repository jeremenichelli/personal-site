---
permalink: /feed.xml
excludeFromSitemap: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}/</link>
    <atom:link href="{{ '/feed.xml' | prepend: site.url }}" rel="self" type="application/rss+xml" />
    <image>
      <title>{{ site.title }}</title>
      <url>{{ site.url }}/assets/images/feed.jpeg</url>
      <link>{{ site.url }}/</link>
    </image>
    <pubDate>{{ collections.archive[0].date | 'date_to_rfc822' }}</pubDate>
    <lastBuildDate>{{ collections.archive[0].date | 'date_to_rfc822' }}</lastBuildDate>
    {% for post in collections.archive %}
      <item>
        <title>{{ post.data.title }}</title>
        <description>{{ post.data.excerpt }}</description>
        <pubDate>{{ post.date | 'date_to_rfc822' }}</pubDate>
        
        {% if post.data.external_url %}{% capture pageUrl %}{{ post.data.external_url }}{% endcapture %}
        {% else %}{% capture pageUrl %}{{ post.url | prepend: site.url }}{% endcapture %}
        {% endif %}

        <link>{{ pageUrl }}</link>
        <guid isPermaLink="true">{{ pageUrl }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
