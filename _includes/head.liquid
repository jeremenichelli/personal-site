<head>
  {% if title %}
    {% capture pageTitle %}{{ title }}{% endcapture %}
  {% else %}
    {% capture pageTitle %}{{ site.title }}{% endcapture %}
  {% endif %}

  {% if excerpt %}
    {% capture pageDescription %}{{ excerpt }}{% endcapture %}
  {% else %}
    {% capture pageDescription %}{{ site.description }}{% endcapture %}
  {% endif %}

  {% capture url %}{{ page.url | prepend: site.url }}{% endcapture %}

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <title>{{ pageTitle }}</title>
  <meta name="description" content="{{ pageDescription }}">

  {% if external_url %}
    <link rel="canonical" href="{{ external_url }}">
  {% else %}
    <link rel="canonical" href="{{ url }}">
  {% endif %}
  
  {% if type == 'post' %}
    <meta name="author" content="{{ site.author }}">
  {% endif %}

  <!-- favicon definitions -->
  {% include 'favicons' %}

  <!-- structured data -->
  <script type="application/ld+json">
  {% if type == 'post' %}
    {% include 'structured-data/post' %}
  {% else %}
    {% include 'structured-data/page' %}
  {% endif %}
  </script>

  <!-- twitter card meta -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@jeremenichelli">
  <meta name="twitter:creator" content="@jeremenichelli" />
  <meta name="twitter:title" content="{{ pageTitle }}">
  <meta name="twitter:description" content="{{ pageDescription }}">
  <meta name="twitter:url" content="{{ url }}">
  <meta name="twitter:image" content="{{ site.url }}/assets/images/twitter-card-image.jpeg">

  <!-- include inline styles -->
  {% capture stylesPath %}styles/{{type}}{% endcapture %}
  <style>{% include stylesPath %}</style>

  <!-- include inline scripts -->
  <script>{% include 'scripts/inline' %}</script>

  <!-- da javascript -->
  <script src="/assets/js/main.js" defer></script>
</head>
