{
  "name": "jeremenichelli.io",
  "version": "3.0.0",
  "description": "Personal site by Jeremias Menichelli",
  "main": "index.md",
  "scripts": {
    "clean": "rimraf _site assets _includes/styles _includes/scripts _includes/favicons.liquid",
    "format:js": "prettier --write './**/*.js'",
    "format:less": "prettier --write './**/*.less'",
    "format:md": "prettier --write './**/*.md'",
    "bundle": "node .scripts/bundle.js",
    "favicons": "node .scripts/favicons.js",
    "images": "node .scripts/images.js",
    "less": "node .scripts/less.js",
    "serve": "eleventy --serve",
    "build": "DEBUG=* eleventy",
    "assets": "yarn bundle && yarn less && yarn favicons && yarn images",
    "validate:feed": "feed-validator _site/feed.xml --no-showfeed",
    "prerelease": "yarn clean",
    "release": "yarn assets && yarn build && yarn validate:feed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "github.com/jeremenichelli/personal-site"
  },
  "keywords": [
    "blog",
    "personal site",
    "jeremias menichelli"
  ],
  "author": "Jeremias Menichelli",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@rollup/plugin-buble": "^0.21.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "autoprefixer": "^9.7.4",
    "chalk": "^3.0.0",
    "cssnano": "^4.1.10",
    "eleventy-nbsp-filter": "^0.1.0",
    "eleventy-xml-plugin": "^0.1.0",
    "favicons": "^6.0.0",
    "feed-validator": "^1.1.1",
    "glob": "^7.1.4",
    "html-minifier": "^4.0.0",
    "husky": "^3.0.0",
    "jimp": "^0.9.5",
    "less": "^3.11.1",
    "lint-staged": "^9.2.0",
    "mkdirp": "^0.5.1",
    "postcss": "^7.0.27",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^2.0.3",
    "rollup-plugin-terser": "^5.3.0"
  },
  "dependencies": {
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.4",
    "store-css": "^1.0.2"
  },
  "lint-staged": {
    "./**/*.js": [
      "prettier --write",
      "git add"
    ],
    "./**/*.less": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "Chrome 33",
    "ChromeAndroid 80",
    "Firefox 29",
    "Edge 12",
    "iOS 8",
    "Safari 7.1"
  ]
}
